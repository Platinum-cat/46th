<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search__flights"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wczy.sunshineairlines_android_70.Search_Flights">

    <TextView
        android:text="Search Flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView13"
        android:textSize="22sp" />

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@mipmap/calendar"
        android:layout_alignBottom="@+id/et_SF_date"
        android:layout_alignParentEnd="true"
        android:id="@+id/iv_SF_calender"
        android:layout_width="50dp" />

    <TextView
        android:text="From:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Cabin Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/sp_SF_to"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/sp_SF_ct"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Search"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_SF_search"
        android:layout_above="@+id/bt_SF_back"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_SF_from"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="To:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/sp_SF_from"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_SF_to"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_SF_ct"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back"
        android:textAllCaps="false"
        android:onClick="sfBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_SF_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/et_SF_date"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

</RelativeLayout>
