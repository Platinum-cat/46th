<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pake1">

    <TextView
        android:text="password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="220dp"
        android:id="@+id/text_password" />

    <TextView
        android:text="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="57dp"
        android:layout_y="144dp"
        android:id="@+id/text_email" />

    <TextView
        android:text="logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="175dp"
        android:layout_y="77dp"
        android:id="@+id/text_logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_x="123dp"
        android:layout_y="205dp"
        android:id="@+id/editText_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_x="124dp"
        android:layout_y="129dp"
        android:id="@+id/editText_email" />

    <Button
        android:text="LOGIN"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_x="42dp"
        android:layout_y="302dp"
        android:id="@+id/login_buttonLogin" />
</AbsoluteLayout>
